{
  "name": "xclap",
  "version": "0.1.9",
  "description": "Advanced and flexible Javascript task executor",
  "main": "lib/index.js",
  "scripts": {
    "test": "mocha --recursive test/spec",
    "coverage": "nyc --all --reporter=lcov --reporter=text --reporter=text-summary npm test",
    "format": "prettier --write --print-width 100 lib/*.js test/**/*.js",
    "xfoo2": "echo xfoo2 from npm scripts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jchip/xclap.git"
  },
  "keywords": [
    "clap",
    "build",
    "make",
    "xclap",
    "javascript",
    "task",
    "executor",
    "tool",
    "system"
  ],
  "author": "Joel Chen <joel123@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/jchip/xclap/issues"
  },
  "homepage": "https://github.com/jchip/xclap",
  "dependencies": {
    "chalk": "^1.1.3",
    "insync": "^2.1.1",
    "optional-require": "^1.0.0",
    "xsh": "^0.2.0",
    "yargs": "^8.0.1"
  },
  "devDependencies": {
    "chai": "^4.0.0",
    "mocha": "^3.4.2",
    "nyc": "^11.0.2",
    "prettier": "^1.2.2",
    "xstdout": "^0.1.0"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "cache": true,
    "all": true,
    "exclude": [
      "cli",
      "xclap.js",
      "test",
      "coverage"
    ]
  },
  "xclap": {
    "__options": {
    },
    "test": "echo pkg test"
  }
